<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroolView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="1dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Enter name:"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/edit_data_name"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:autofillHints="name"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="e.g. Jonas"
                    android:inputType="text"
                    tools:layout_editor_absoluteX="65dp"
                    tools:layout_editor_absoluteY="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Enter surname:"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/edit_data_surname"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="e.g. Jonaitis"
                    android:inputType="text"
                    tools:layout_editor_absoluteX="65dp"
                    tools:layout_editor_absoluteY="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Enter phone number:"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/edit_data_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="+370 600 0000"
                    android:inputType="text"
                    tools:layout_editor_absoluteX="65dp"
                    tools:layout_editor_absoluteY="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Enter city:"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/edit_data_city"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="e.g. vilnius"
                    android:inputType="text"
                    tools:layout_editor_absoluteX="65dp"
                    tools:layout_editor_absoluteY="14dp" />


            </LinearLayout>


        </RelativeLayout>

    </ScrollView>


    <TextView
        android:id="@+id/edit_data_informationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:gravity="center_horizontal"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroolView" />

    <Button
        android:id="@+id/edit_data_back_button"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Back"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_data_informationText" />

    <Button
        android:id="@+id/edit_data_update_button"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="Update"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_data_informationText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="User Profile"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>